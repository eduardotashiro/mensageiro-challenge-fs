generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())

  templates Template[]
  emails    Email[]
}

model Template {
  id        String   @id @default(uuid())
  title     String
  subject   String
  body      String
  createdAt DateTime @default(now())

  authorId  String
  author    User @relation(fields: [authorId], references: [id])
}

model Email {
  id          String   @id @default(uuid())
  subject     String
  body        String
  sentAt      DateTime @default(now())

  userId   String
  user     User @relation(fields: [userId], references: [id])
}
